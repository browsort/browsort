{
    "compilerOptions": {
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "lib": ["es2015.promise", "es6"],
        "allowJs": false,
        "pretty": false,
        "newLine": "lf",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "baseUrl": "./",
        "paths": {
            "analyzer/*": ["src/analyzer/*"],
            "data/*": ["src/data/*"],
            "logger/*": ["src/logger/*"],
            "main/*": ["src/main/*"],
            "parser/*": ["src/parser/*"],
            "reader/*": ["src/reader/*"],
            "result/*": ["src/result/*"],
            "tool/*": ["src/tool/*"]
        },
        "sourceMap": false,
        "noErrorTruncation": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": true,
        "noStrictGenericChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noEmit": true
    },
    "include": [
        "./src/"
    ]
}
